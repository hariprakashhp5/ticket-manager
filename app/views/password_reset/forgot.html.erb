<div class="form">
  <p id="notice"><%= notice %></p>
	<h4>Reset Password</h4>
  <%= form_tag url_for(:controller=>"password_reset",:action =>"reset_pass", :method=>'post')  do %>
  <%if current_user == nil%>
  <%=text_field_tag 'email',nil, placeholder: 'Enter Your Email Id *' , class: 'tt'%>
  <%end%>
  <%=password_field_tag 'password',nil, placeholder: 'New Password *' , class: 'tt'%>

  <div style="clear:both"></div>
  <%= submit_tag 'Reset', class: "btn-submit-one"%>
  <%end%>
  </div>