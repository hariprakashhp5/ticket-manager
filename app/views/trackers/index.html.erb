<%#= render :partial => "/trackers/form.html.erb"%>
<p id="notice"><%= notice %></p>



<h1 style="text-align:center;">All Tickets</h1>
<h5 style="text-align:center;">Export:
  <%= link_to "CSV", trackers_path(format: "csv") %> |
  <%= link_to "Excel", trackers_path(format: "xls") %></h5>

<div class="pull-left"><span>Total:</span> <%=@trackers.count%></div>
<div class="pull-left"><span>Pending:</span> <a href="/pending"><%=pending%></a></div>


<div class="status"><span>Outbound:</span> <%=@delay%></div>

<div class="status"><span>Neutral:</span> <%=@ontime%></div>

<div class="status"><span>Inbound:</span> <%=@early%></div>

<div style="clear:both"></div>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="2">Ticket ID</th>
      <th>Ticket Owner</th>
      <th>Created</th>
      <th>ETA</th>
      <th>Finished</th>
      <th>Type of Work</th>
      <th>No. of Commits</th>
      <th>Staging</th>
    <!--   <th>Completed</th> -->
      <th>Description</th>
      <th>Blurb</th>
      <th>Delete</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @trackers.each do |tracker| %>
      <tr>
        <td><%= tracker.created_at.strftime("%d-%m-%y")%></td>
        <td ><%= best_in_place tracker, :ticket_id, :inner_class => "tdfield" %><td width="20px;">   <a target="_blank" href="https://bankbazaarmail.zendesk.com/agent/tickets/<%= tracker.ticket_id%>">Open</a></td></td>
        <td ><%= best_in_place tracker, :owner, :inner_class => "tdfield" %></td>
                  <td ><%= best_in_place tracker, :created, :inner_class => "tdfield" %></td>
        <td ><%= best_in_place tracker, :eta, :inner_class => "tdfield"%></td>
        <td ><%= best_in_place tracker, :finished, :inner_class => "tdfield"%></td>
        <td ><%=  best_in_place tracker, :tow, :inner_class => "tdfield"%></td>
        <td ><%= best_in_place tracker, :noc, :inner_class => "tdfield"%></td>
        <td ><%= best_in_place tracker, :staging, :inner_class => "tdfield"%></td>
        <!-- <td ><%= tracker.comp %></td> -->
        <td ><%= best_in_place tracker, :disc, :as => :textarea%></td>
        <td><%= link_to 'Show', tracker %></td>
        <!-- <td><%#= link_to 'Edit', edit_tracker_path(tracker) %></td> -->
        <td><%= link_to 'Destroy', tracker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

