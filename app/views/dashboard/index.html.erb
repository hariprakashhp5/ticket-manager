<%= render :partial => "/dashboard/assign.html.erb"%>
<p id="notice"><%= notice %></p>



<h1 style="text-align:center;">All Tickets</h1>
<h5 style="text-align:center;">Export:
  <%= link_to "CSV", dashboard_path(format: "csv") %> |
  <%= link_to "Excel", dashboard_path(format: "xls") %></h5>

<div class="pull-left"><span>Total:</span> <%=@trackers.count%></div>
<div class="pull-left"><span>Pending:</span> <a href="/pending"><%=pending%></a></div>


<div class="status"><span>Outbound:</span> <a href="/dashboard/outbound"><%=@stats.count("> ETA")%></a></div>

<div class="status"><span>Neutral:</span> <a href="/dashboard/neutral"><%=@stats.count("On Time")%></a></div>

<div class="status"><span>Inbound:</span> <a href="/dashboard/inbound"><%=@stats.count("< ETA")%></a></div>

<div style="clear:both"></div>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Ticket ID</th>
       <th>Description</th>
      <th>Created By</th>
      <th>Created Date</th>
      <th>ETA</th>
      <th>Finished</th>
      <th>Request Type</th>
      <th>No. of Commits</th>
      <th>Staging Group</th>
    <th>ETA Met?</th>
      <th>Config Owner</th>
      <th>Bugs</th>
      <th>Status</th>
      <th>Delete</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @trackers.each do |tracker| %>
      <tr>
        <td><%= tracker.created_at%></td>
        <td ><a target="_blank" href="https://bankbazaarmail.zendesk.com/agent/tickets/<%= tracker.ticket_id%>"><%= tracker.ticket_id %></a></td>
        <td ><%= tracker.disc%></td>
        <td ><%= tracker.owner %></td>
                  <td ><%= tracker.created %></td>
        <td ><%= tracker.eta%></td>
        <td ><%= tracker.finished%></td>
        <td ><%= tracker.tow%></td>
        <td ><%= tracker.noc%></td>
        <td ><%= tracker.staging%></td>
        <td ><%if tracker.comp == "> ETA" %>
          <span class="red">NO</span>
          <%elsif tracker.comp == "< ETA" || tracker.comp == "On Time"%>
          <span class="green">YES</span><%end%></td>
        <td><%= User.where("id=?", tracker.uid).pluck("name").first.capitalize%></td>
        <td ><span class="red"><%if tracker.bugs != nil%><%=link_to tracker.bugs, qc_remarks_path(:id=>tracker.id)%><%end%></span></td>
       
        <td >
           <%if  tracker.status=="3" %>
           <%= button_to 'Live', live_path(:id=>tracker.id), :method => :post, :remote=>true %>
           <%elsif tracker.status == "1"%>
           <span class="blue">In QC</span>
           <%elsif tracker.status == "2"%>
           <span class="red">Error</span>
           <%elsif tracker.status == "3"%>
           <span class="orange">Yet to Push</span>
           <%elsif tracker.status == "4"%>
           <span class="green">Live</span>
           <%end%>
         </td>
        <td><%= link_to 'Destroy', tracker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
